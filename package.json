{
  "name": "@candlefw/wick",
  "version": "0.5.7",
  "description": "Web Component Builder",
  "main": "./source/wick.mjs",
  "scripts": {
    "build_js_parser": "hydrocarbon compile -n jsparser -o ./source/js -t 'mjs' ./source/js/wick_js.hcg",
    "build_js_parser.table": "hydrocarbon table ./source/js/wick_js.hcg",
    "build_js_parser.mount": "hydrocarbon compile -n jsparser -o ./source/js -t 'mjs' -m ./source/js/wick_js.hcg",
    "prepublishOnly": "npm run build_js_parser && npm run build && npm test",
    "prepublishOnly": "npm run build && npm test",
    "test": "mocha -r esm",
    "test.watch": "mocha -r esm -w -R min",
    "build": "rollup --config ./build/config/main.config.js",
    "build.watch": "rollup --config  ./build/config/main.config.js --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/candlefw/wick.git"
  },
  "keywords": [
    "SPA",
    "PWA",
    "Components",
    "JavaScript",
    "Forms",
    "Website",
    "REST",
    "APP"
  ],
  "directories": {
    "lib": "source",
    "doc": "docs",
    "man": "docs/guide",
    "test": "test"
  },
  "author": "Anthony Weathersby",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/candlefw/wick/issues"
  },
  "homepage": "https://github.com/candlefw/wick#readme",
  "devDependencies": {
    "benchmark": "^2.1.4",
    "chai": "^4.2.0",
    "esm": "^3.0.84",
    "jquery": "^3.3.1",
    "jsdoc": "^3.5.5",
    "jsdom": "^11.12.0",
    "mocha": "^5.2.0",
    "mocha-logger": "^1.0.6",
    "node-fetch": "^2.3.0",
    "nyc": "^12.0.2",
    "rollup": "^0.62.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-gzip": "^1.4.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-resolve": "0.0.1-predev.1",
    "rollup-plugin-terser": "^1.0.1",
    "@candlefw/hydrocarbon": "*"
  },
  "jshintConfig": {
    "esversion": 6,
    "unused": true
  },
  "dependencies": {
    "@candlefw/css": "*",
    "@candlefw/glow": "*",
    "@candlefw/html": "*",
    "@candlefw/spark": "*",
    "@candlefw/url": "*",
    "@candlefw/whind": "*"
  }
}
