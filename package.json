{
  "name": "@candlefw/wick",
  "version": "0.8.11",
  "description": "Web Component Builder",
  "main": "./source/wick.node.mjs",
  "type": "module",
  "bin": {
    "wick": "./source/cli.mjs"
  },
  "scripts": {
    "prepublishOnly": "yarn run build && yarn run build.lite",
    "compile": "hydrocarbon compile -u -o ./source/compiler/ -e ./source/compiler/env_proxy.mjs -t mjs.js ./source/compiler/grammars/wick.hcg",
    "compile.js": "hydrocarbon compile -u -o ./source/compiler/js -e ./source/compiler/env_proxy.mjs -t mjs ./source/compiler/grammars/js.hcg",
    "compile.html": "hydrocarbon compile -u -o ./source/compiler/html -e ./source/compiler/env_proxy.mjs -t mjs ./source/compiler/grammars/html.hcg",
    "compile.test": "node --experimental-modules ./test/config.mjs",
    "test.coverage": "nyc yarn run test",
    "test": "mocha --require esm ./test/test.js",
    "test.watch": "mocha -r esm -w --watch-extensions js ./test/test.js",
    "build": "rollup --config ./build/config/main.config.js",
    "build.watch": "rollup --config ./build/config/main.config.js --watch",
    "build.lite": "rollup --config ./build/config/lite.config.js",
    "build.lite.watch": "rollup --config ./build/config/lite.config.js --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/candlefw/wick.git"
  },
  "keywords": [
    "SPA",
    "PWA",
    "Components",
    "JavaScript",
    "Forms",
    "Website",
    "REST",
    "APP"
  ],
  "directories": {
    "lib": "source",
    "test": "test"
  },
  "author": "Anthony Weathersby",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/candlefw/wick/issues"
  },
  "homepage": "https://github.com/candlefw/wick#readme",
  "devDependencies": {
    "@candlefw/hydrocarbon": "0.1.7",
    "@rollup/plugin-commonjs": "^11.0.1",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "benchmark": "^2.1.4",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "esm": "latest",
    "mocha": "latest",
    "mocha-logger": "^1.0.6",
    "node-fetch": "^2.3.0",
    "rollup": "latest",
    "rollup-plugin-gzip": "latest",
    "rollup-plugin-resolve": "latest",
    "rollup-plugin-terser": "latest"
  },
  "jshintConfig": {
    "esversion": 6,
    "unused": true
  },
  "dependencies": {
    "@candlefw/css": "^0.1.4",
    "@candlefw/glow": "latest",
    "@candlefw/html": "^0.0.14",
    "@candlefw/math": "^0.0.3",
    "@candlefw/spark": "^0.0.8",
    "@candlefw/url": "0.0.10",
    "@candlefw/whind": "0.3.6",
    "commander": "^4.1.0",
    "env": "^0.0.2",
    "latest": "^0.2.0"
  },
  "esm": {
    "cjs": {
      "cache": true
    }
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-fallthrough": [
        "error",
        {
          "commentPattern": "[iI]ntentional( - [\\w\\W]*){0,1}"
        }
      ],
      "semi-style": [
        "error",
        "last"
      ],
      "semi": [
        "warn",
        "always",
        {
          "omitLastInOneLineBlock": true
        }
      ],
      "prefer-const": "warn",
      "new-cap": [
        "error"
      ],
      "padding-line-between-statements": [
        "error",
        {
          "blankLine": "always",
          "prev": "function",
          "next": "*"
        }
      ]
    }
  },
  "engine": {
    "node": ">=12.0.0"
  }
}
