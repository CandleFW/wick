{
  "name": "@candlefw/wick",
  "version": "0.8.4",
  "description": "Web Component Builder",
  "main": "./source/wick.mjs",
  "type": "module",
  "scripts": {
    "build_js_parser": "hydrocarbon compile -n js -o ./source/js -t 'mjs' ./source/js/hc_files/js.hcg -e ./source/js/js.env.mjs",
    "build_js_parser.table": "hydrocarbon table ./source/js/wick_js.hcg",
    "compile": "hydrocarbon compile -u -o ./source/compiler/ -e ./source/compiler/env_proxy.mjs -t mjs.js ./source/compiler/grammars/wick.hcg",
    "compile.js": "hydrocarbon compile -u -o ./source/compiler/js -e ./source/compiler/env_proxy.mjs -t mjs ./source/compiler/grammars/js.hcg",
    "compile.html": "hydrocarbon compile -u -o ./source/compiler/html -e ./source/compiler/env_proxy.mjs -t mjs ./source/compiler/grammars/html.hcg",
    "compile.test": "node --experimental-modules ./test/config.mjs",
    "test.coverage": "nyc npm run test",
    "test.watch": "mocha -r esm -w --watch-extensions mjs test/test.js test.js",
    "test": "mocha --require esm --watch-extensions mjs test/test.js",
    "prepublishOnly": "npm run build",
    "build": "rollup --config ./build/config/main.config.js",
    "build.watch": "rollup --config ./build/config/main.config.js --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/candlefw/wick.git"
  },
  "keywords": [
    "SPA",
    "PWA",
    "Components",
    "JavaScript",
    "Forms",
    "Website",
    "REST",
    "APP"
  ],
  "directories": {
    "lib": "source",
    "test": "test"
  },
  "author": "Anthony Weathersby",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/candlefw/wick/issues"
  },
  "homepage": "https://github.com/candlefw/wick#readme",
  "devDependencies": {
    "@candlefw/hydrocarbon": "latest",
    "benchmark": "^2.1.4",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "esm": "latest",
    "mocha": "^5.2.0",
    "mocha-logger": "^1.0.6",
    "node-fetch": "^2.3.0",
    "nyc": "^14.1.1",
    "rollup": "^1.18.0",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-gzip": "latest",
    "rollup-plugin-node-resolve": "latest",
    "rollup-plugin-resolve": "latest",
    "rollup-plugin-terser": "latest"
  },
  "jshintConfig": {
    "esversion": 6,
    "unused": true
  },
  "dependencies": {
    "@candlefw/css": "latest",
    "@candlefw/glow": "latest",
    "@candlefw/spark": "^0.0.8",
    "@candlefw/url": "latest",
    "@candlefw/whind": "latest"
  },
  "esm": {
    "cjs": {
      "cache": true
    }
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-fallthrough": [
        "error",
        {
          "commentPattern": "[iI]ntentional( - [\\w\\W]*){0,1}"
        }
      ],
      "semi-style": [
        "error",
        "last"
      ],
      "semi": [
        "warn",
        "always",
        {
          "omitLastInOneLineBlock": true
        }
      ],
      "prefer-const": "warn",
      "new-cap": [
        "error"
      ],
      "padding-line-between-statements": [
        "error",
        {
          "blankLine": "always",
          "prev": "function",
          "next": "*"
        }
      ]
    }
  },
  "engine": {
    "node": ">=12.0.0"
  }
}
